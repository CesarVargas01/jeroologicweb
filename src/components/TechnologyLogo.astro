---
// src/components/TechnologyLogo.astro
interface Props {
  src: string;
  alt: string;
}
const { src, alt } = Astro.props;
---
<div class="w-full aspect-square flex items-center justify-center bg-white dark:bg-white rounded-[15px] p-[15px] shadow-md transition-all duration-300 border-b-4 border-primary hover:-translate-y-1.5 hover:shadow-xl">
  <img
    src={src}
    alt={alt}
    width="100"
    height="100"
    loading="lazy"
    class="max-w-full max-h-[70px]"
  />
</div>
