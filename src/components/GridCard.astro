---
// src/components/GridCard.astro
interface Props {
  href: string;
  imgSrc: string;
  imgAlt: string;
  title: string;
  description: string;
  tags: string[];
  linkText?: string;
}

const { 
  href,
  imgSrc, 
  imgAlt, 
  title, 
  description, 
  tags, 
  linkText = "Leer m√°s"
} = Astro.props;
---

<div class="group bg-white dark:bg-secondary rounded-[15px] overflow-hidden shadow-xl transition-transform duration-300 hover:-translate-y-2.5">
  <div class="h-[200px] overflow-hidden">
    <a href={href}>
      <img
        src={imgSrc}
        alt={imgAlt}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        loading="lazy"
      />
    </a>
  </div>
  <div class="p-8 text-center">
    <h3 class="mb-2.5 text-xl text-dark dark:text-light">{title}</h3>
    <p class="text-gray dark:text-light-gray mb-4">{description}</p>
    <div class="flex flex-wrap gap-2.5 mb-4 justify-center">
      {tags.map(tag => (
        <span class="bg-light-gray text-dark dark:bg-gray dark:text-light px-3 py-1.5 rounded-full text-sm font-medium">{tag}</span>
      ))}
    </div>
    <a href={href} class="inline-block bg-primary text-white px-7 py-3 rounded-full font-semibold transition-all duration-300 border-none cursor-pointer text-base hover:bg-primary-dark hover:-translate-y-0.5 hover:shadow-lg">{linkText}</a>
  </div>
</div>
