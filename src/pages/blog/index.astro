---
import Layout from '../../layouts/Layout.astro';
import GridCard from '../../components/GridCard.astro';

const posts = [
  {
    href: "/blog/automatizacion-procesos-n8n-make",
    imgSrc: "/images/n8nmake.webp",
    imgAlt: "Automatización de Procesos con n8n y Make",
    title: "Automatización de Procesos con n8n y Make",
    description: "Descubre cómo la automatización puede transformar tus procesos, reduciendo tiempos y errores.",
    tags: ["Automatización", "n8n", "Make"],
  },
  {
    href: "/blog/bases-de-datos-eficientes",
    imgSrc: "/images/BasesdeDatos.webp",
    imgAlt: "Bases de Datos Eficientes",
    title: "Bases de Datos Eficientes para tu Negocio",
    description: "La importancia de un diseño de bases de datos eficiente para gestionar tu información crítica.",
    tags: ["Bases de Datos", "Optimización", "Datos"],
  },
  {
    href: "/blog/desarrollo-web-a-medida",
    imgSrc: "/images/DesarrolloWeb.webp",
    imgAlt: "Desarrollo Web a Medida",
    title: "Desarrollo Web a Medida: Experiencias Únicas",
    description: "Creando sitios y aplicaciones únicas, adaptadas a tus necesidades con tecnologías modernas.",
    tags: ["Desarrollo Web", "Diseño Web"],
  },
];
---

<Layout title="Blog - Jeroo Logic" description="Explora el blog de Jeroo Logic con artículos sobre automatización de procesos con n8n y Make, bases de datos eficientes y desarrollo web a medida. Mantente al día con las últimas tendencias tecnológicas.">
  <!-- Latest Articles Section -->
  <section class="py-[100px] bg-white dark:bg-dark" id="blog">
    <div class="w-full max-w-screen-xl mx-auto px-5">
      <div class="text-center mb-[60px]">
        <h2 class="text-4xl text-dark dark:text-light mb-4 relative inline-block">
          Jeroo Blog
          <div class="absolute bottom-[-10px] left-1/2 -translate-x-1/2 w-[80px] h-[4px] bg-primary rounded-md"></div>
        </h2>
        <p class="text-gray dark:text-light-gray max-w-3xl mt-5 mx-auto">Explora nuestros artículos sobre tecnología, automatización y desarrollo.</p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map(post => (
          <GridCard
            href={post.href}
            imgSrc={post.imgSrc}
            imgAlt={post.imgAlt}
            title={post.title}
            description={post.description}
            tags={post.tags}
          />
        ))}
      </div>
    </div>
  </section>
</Layout>