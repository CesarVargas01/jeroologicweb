---
import Layout from '../layouts/Layout.astro';
import RobotIcon from '../components/icons/RobotIcon.astro';
import DatabaseIcon from '../components/icons/DatabaseIcon.astro';
import CloudIcon from '../components/icons/CloudIcon.astro';
import LaptopCodeIcon from '../components/icons/LaptopCodeIcon.astro';
import SyncAltIcon from '../components/icons/SyncAltIcon.astro';
import ChartLineIcon from '../components/icons/ChartLineIcon.astro';
import WalletIcon from '../components/icons/WalletIcon.astro';
import ExpandArrowsAltIcon from '../components/icons/ExpandArrowsAltIcon.astro';
import LockOpenIcon from '../components/icons/LockOpenIcon.astro';
import RocketIcon from '../components/icons/RocketIcon.astro';
import CogsIcon from '../components/icons/CogsIcon.astro';
import HeadsetIcon from '../components/icons/HeadsetIcon.astro';
import EnvelopeIcon from '../components/icons/EnvelopeIcon.astro';
import PhoneAltIcon from '../components/icons/PhoneAltIcon.astro';
