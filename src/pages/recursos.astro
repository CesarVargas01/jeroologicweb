---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  {
    imgSrc: "/images/SistemadeAutomatizaciónComercial.webp",
    imgAlt: "Proyecto Automatización",
    title: "Sistema de Automatización Comercial",
    description: "Plataforma que automatiza procesos de ventas y gestión de clientes para una empresa de retail.",
    tags: ["n8n", "PostgreSQL", "React"],
  },
  {
    imgSrc: "/images/PlataformaeCommerce.webp",
    imgAlt: "Proyecto eCommerce",
    title: "Plataforma eCommerce",
    description: "Tienda online escalable con gestión de inventario, pagos y envíos automatizados.",
    tags: ["WooCommerce", "WordPress", "MySQL"],
  },
  {
    imgSrc: "/images/MigraciondeBasedeDatos.webp",
    imgAlt: "Proyecto Base de Datos",
    title: "Migración de Base de Datos",
    description: "Migración y optimización de base de datos para una institución educativa.",
    tags: ["MySQL", "MongoDB", "Python"],
  },
];
---

<Layout title="Recursos - Jeroo Logic" description="Descubre los proyectos recientes de Jeroo Logic: sistemas de automatización, plataformas eCommerce y migraciones de bases de datos. Conoce nuestras soluciones tecnológicas.">
  <!-- Projects Section -->
  <section class="py-[100px] bg-gradient-to-br from-[#f0f9ff] to-[#e0f2fe] dark:from-sky-900 dark:to-sky-800" id="projects">
    <div class="w-full max-w-screen-xl mx-auto px-5">
      <div class="text-center mb-[60px]">
        <h2 class="text-4xl text-dark dark:text-light mb-4 relative inline-block">
          Proyectos Recientes
          <div class="absolute bottom-[-10px] left-1/2 -translate-x-1/2 w-[80px] h-[4px] bg-primary rounded-md"></div>
        </h2>
        <p class="text-gray dark:text-light-gray max-w-3xl mt-5 mx-auto">Algunos de nuestros trabajos realizados con soluciones tecnológicas.</p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map(project => (
          <ProjectCard
            imgSrc={project.imgSrc}
            imgAlt={project.imgAlt}
            title={project.title}
            description={project.description}
            tags={project.tags}
          />
        ))}
      </div>
    </section>

    </Layout>