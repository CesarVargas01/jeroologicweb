---
import Layout from '../../layouts/Layout.astro';
import GridCard from '../../components/GridCard.astro';

const certifications = [
  {
    href: "/certificaciones/google-ai-essentials",
    imgSrc: "/images/certificados/google-ai-essentials-v1.png",
    imgAlt: "Certificado Google AI Essentials",
    title: "Google AI Essentials",
    description: "Cubre los fundamentos de la IA, su aplicación para maximizar la productividad y la importancia de su uso responsable.",
    tags: ["Google", "IA"],
  },
  {
    href: "/certificaciones/google-prompting-essentials",
    imgSrc: "/images/certificados/google-prompting-essentials.png",
    imgAlt: "Certificado Google Prompting Essentials",
    title: "Google Prompting Essentials",
    description: "Valida las habilidades para diseñar y aplicar prompts efectivos, optimizando tareas y potenciando la creatividad con IA.",
    tags: ["Google", "IA"],
  },
];
---

<Layout title="Certificaciones - Jeroo Logic" description="Certificaciones y formación continua de Jeroo Logic. Compromiso con el aprendizaje continuo y la excelencia técnica.">
  <section class="py-[100px] bg-white dark:bg-dark" id="certificaciones">
    <div class="w-full max-w-screen-xl mx-auto px-5">
      <div class="text-center mb-[60px]">
        <h2 class="text-4xl text-dark dark:text-light mb-4 relative inline-block">
          Certificaciones y Formación
          <div class="absolute bottom-[-10px] left-1/2 -translate-x-1/2 w-[80px] h-[4px] bg-primary rounded-md"></div>
        </h2>
        <p class="text-gray dark:text-light-gray max-w-3xl mt-5 mx-auto">Compromiso con el aprendizaje continuo y la excelencia técnica.</p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {certifications.map(cert => (
          <GridCard
            href={cert.href}
            imgSrc={cert.imgSrc}
            imgAlt={cert.imgAlt}
            title={cert.title}
            description={cert.description}
            tags={cert.tags}
          />
        ))}

        <!-- Certificado 3 (Próximamente) -->
        <div class="group bg-white dark:bg-secondary rounded-[15px] overflow-hidden shadow-xl flex flex-col items-center justify-center p-8 border-2 border-dashed border-gray-300 dark:border-gray-600">
          <div class="text-center">
            <h3 class="mb-2.5 text-xl text-dark dark:text-light">Certificación en Ciberseguridad</h3>
            <p class="text-gray dark:text-light-gray">(En curso)</p>
          </div>
        </div>

      </div>
    </div>
  </section>
</Layout>