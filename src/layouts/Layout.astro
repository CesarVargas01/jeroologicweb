---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { generateStructuredData, generatePageMetadata } from '../utils/seo';

interface Props {
  title: string;
  description?: string;
  image?: string; // Opcional: URL de la imagen para redes sociales
}

const { title, description, image } = Astro.props;

// Generar metadatos usando utilidades
const metadata = generatePageMetadata(title, description, image);

// URL can√≥nica para SEO
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// URL de la imagen para redes sociales
const socialImageURL = image
  ? new URL(image, Astro.site)
  : new URL('/images/default-social.webp', Astro.site);

// Generar datos estructurados usando utilidades
const structuredData = generateStructuredData();
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" />

    <!-- SEO Metadatos Fundamentales -->
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={metadata.title} />
    <meta property="og:description" content={metadata.description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={metadata.title} />
    <meta property="twitter:description" content={metadata.description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Structured Data (JSON-LD) -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
      is:inline
    />

    <link
      rel="preload"
      as="image"
      href="/images/SolucionesdeSoftware-large.webp"
      imagesrcset="/images/SolucionesdeSoftware-large.webp 1200w, /images/SolucionesdeSoftware-medium.webp 800w, /images/SolucionesdeSoftware-small.webp 400w"
      imagesizes="(max-width: 768px) 100vw, 800px"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/global.css" />

    <!-- JavaScript modules -->
    <script src="/js/navigation.js" defer is:inline></script>
    <script src="/js/forms.js" defer is:inline></script>
    <script src="/js/scroll-effects.js" defer is:inline></script>
    <!-- Service Worker (opcional - descomenta para habilitar cache offline) -->
    <!-- <script src="/js/sw-register.js" defer is:inline></script> -->
  </head>
  <body>
    <!-- Skip to content link for accessibility -->
    <a
      href="#main-content"
      class="absolute z-50 top-4 left-4 -translate-y-full bg-white dark:bg-gray-800 text-gray-900 dark:text-white p-4 rounded-lg shadow-lg transition-transform duration-300 focus:translate-y-0"
      >Saltar al contenido principal</a
    >

    <!-- Header -->
    <Header />

    <!-- Main content -->
    <main id="main-content">
      <slot />
    </main>

    <!-- Floating action buttons -->
    <a
      href="https://wa.me/573208718037"
      class="whatsapp-btn"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Chatea con nosotros por WhatsApp"
    >
      <i class="fab fa-whatsapp"></i>
    </a>

    <button id="scrollToTopBtn" aria-label="Volver arriba">
      <i class="fas fa-arrow-up"></i>
    </button>

    <!-- Footer -->
    <Footer />
  </body>
</html>
